---
type Props = {
	description: string;
	href: string;
	title: string;
};

const { description, href, title } = Astro.props;
---

<li>
	<h2 id={title.replaceAll(" ", "-")}>
		<a
			class="not-prose underline hover:text-neutral-500"
			href={href}
		>
			{title}
		</a>
	</h2>
	<p>
		{description}
	</p>
</li>
